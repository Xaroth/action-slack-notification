{
  "name": "slack-notification",
  "version": "1.0.0",
  "author": "Steven 'Xaroth' Noorbergen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xaroth/action-slack-notification/issues"
  },
  "homepage": "https://github.com/xaroth/action-slack-notification#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xaroth/action-slack-notification"
  },
  "main": "src/main.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "ncc build src/main.ts",
    "dev": "ncc build --watch src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "test": "jest --watch",
    "test:format": "prettier --check '**/*.ts'",
    "test:lint": "eslint --ext .ts src/",
    "test:unit": "jest",
    "test:build": "ncc build -C -q src/main.ts",
    "commit:format": "pretty-quick --staged --check --pattern **/*.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "@slack/web-api": "^6.9.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "pre-commit": [
    "commit:format"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
