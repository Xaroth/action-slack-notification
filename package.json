{
  "name": "slack-notification",
  "version": "1.0.0",
  "author": "Steven 'Xaroth' Noorbergen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xaroth/action-slack-notification/issues"
  },
  "homepage": "https://github.com/xaroth/action-slack-notification#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xaroth/action-slack-notification"
  },
  "main": "src/main.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "ncc build src/main.ts",
    "dev": "ncc build --watch src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "test": "jest --watch",
    "test:format": "prettier --check '**/*.ts'",
    "test:lint": "eslint --ext .ts src/",
    "test:unit": "jest",
    "test:build": "ncc build -C -q src/main.ts",
    "commit:format": "pretty-quick --staged --check --pattern **/*.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@slack/web-api": "^7.0.4",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.3.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "pre-commit": [
    "commit:format"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
